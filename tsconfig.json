{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "outDir": "build",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "lib": ["es2017"],
    "sourceMap": true,
    "target": "es6"
  },
  "include": ["src/**/*", "test/**/*"]
}
